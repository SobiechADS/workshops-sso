{
  "realm": "workshop-oidc-realm",
  "enabled": true,
  "roles": {
    "realm": [
      {
        "name": "user"
      },
      {
        "name": "admin"
      }
    ]
  },
  "clients": [
    {
      "clientId": "oidc-app",
      "protocol": "openid-connect",
      "publicClient": true,
      "redirectUris": [
        "http://localhost:9180/*"
      ],
      "standardFlowEnabled": true,
      "attributes": {
        "pkce.code.challenge.method": "S256",
        "pkce.code.challenge.required": "true",
        "post.logout.redirect.uris": "http://localhost:9180/*"
      },
      "defaultClientScopes": [
        "web-origins",
        "role_list",
        "profile",
        "email"
      ]
    }
  ],
  "users": [
    {
      "username": "admin-oidc",
      "enabled": true,
      "email": "admin-oidc@example.com",
      "emailVerified": true,
      "firstName": "Admin",
      "lastName": "OIDC",
      "credentials": [
        {
          "type": "password",
          "value": "12345678",
          "temporary": false
        }
      ],
      "realmRoles": [
        "user",
        "admin"
      ]
    },
    {
      "username": "user-oidc",
      "enabled": true,
      "email": "user-oidc@example.com",
      "emailVerified": true,
      "firstName": "User",
      "lastName": "OIDC",
      "credentials": [
        {
          "type": "password",
          "value": "12345678",
          "temporary": false
        }
      ],
      "realmRoles": [
        "user"
      ]
    }
  ]
}